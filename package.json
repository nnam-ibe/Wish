{
  "name": "wish-server",
  "version": "0.1.5",
  "main": "lib/server.js",
  "scripts": {
    "client": "cd client && yarn start",
    "server": "yarn run build-server && nodemon dist/server.js",
    "start": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
    "test-client": "cd client && yarn test",
    "test-server": "jest",
    "test": "yarn lint && yarn test-client && yarn test-server",
    "build-client": "cd client && yarn build",
    "build-server": "babel lib -d dist",
    "build": "yarn build-client && yarn build-server",
    "serve": "node dist/server.js",
    "compose": "yarn run build && docker-compose up -d --build",
    "lint": "eslint lib/**/*.js client/src/**/*.js client/src/**/*.jsx",
    "lint:fix": "eslint --fix lib/**/*.js client/src/**/*.js client/src/**/*.js"
  },
  "dependencies": {
    "@babel/runtime": "^7.8.3",
    "body-parser": "^1.18.3",
    "express": "^4.17.3",
    "firebase-admin": "8.7.0",
    "lodash": "^4.17.10",
    "moment": "^2.24.0",
    "nodemon": "^1.17.5",
    "react-number-format": "4.3.0",
    "uuid": "^3.3.2",
    "yarn": "^1.22.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.3",
    "@babel/core": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "concurrently": "^3.5.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.18.0",
    "eslint-plugin-react-hooks": "^1.7.0",
    "jest": "^24.9.0",
    "supertest": "^4.0.2"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/client/",
      "/dist/"
    ]
  },
  "author": "",
  "license": "ISC"
}
